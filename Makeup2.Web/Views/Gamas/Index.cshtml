@model IEnumerable<Makeup2.Web.Models.Gama>

@{
    ViewBag.Title = "Index";
}

<p class="mt-3">
    <a href="@Url.Action("Create", "Gamas")" class="btn btn-sm bg-danger bg-principal text-white"><i class="fas fa-plus"></i> Gama</a>
</p>
<div class="row justify-content-center ">
    <div class="col-md-6 ">
        <div class="card">
            <div class="card-header bg-principal">
                <h6 class="text-white ">Lista de Gamas</h6>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Tipo)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Gamas", new { id = item.Id })" title="Editar"><i class="far fa-edit text-warning"></i></a>
                                <a href="@Url.Action("Details", "Gamas", new { id = item.Id })" title="Ver"><i class="fas fa-eye text-info"></i> </a>
                                <a href="@Url.Action("Delete", "Gamas", new { id = item.Id })" title="Eliminar"><i class="fas fa-trash text-danger"></i> </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

