<body>

    <!-- Navigation -->
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-principal fixed-top">
        <div class="container bg-prinks">
            <a class="navbar-brand" href=""><img src="~/Content/Img/Logo.png" width="100" height="75" />@Html.ActionLink("MakeUp Forever", "Index", "Home", null, new { @class = "nav-link" })</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                   

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item  text-black"><a href="@Url.Action("Index","Gamas")" class="nav-link  text-black">Marcas</a></li>
                        <li class="nav-item  text-black"><a href="@Url.Action("Index","MAquillajes")" class="nav-link  text-black">Las mas destacado</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item  text-black"><a href="@Url.Action("Index","Roles")" class="nav-link  text-black">Roles</a></li>
                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
       
