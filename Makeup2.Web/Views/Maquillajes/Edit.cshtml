@model Makeup2.Web.Models.Maquillaje

@{
    ViewBag.Title = "Edit";
}
<body class="maqui">
    <p class="mt-3 pt-lg-5"></p>
    <p class="mt-3 pt-lg-5"></p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row justify-content ">
                <div class="col-md-9 ">
                    <div class="card">
                        <div class="card-header bg-principal">
                            <h6 class="text-white ">Editar</h6>
                        </div>
                        <div class="card-body marc">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.DateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DateTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GamaId, "GamaId", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("GamaId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GamaId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">

                                    @Html.ActionLink("Cancelar", "Index") |
                                    <input type="submit" value="Guardar" class="btn btn-sm bg-principal rounded text-white" />
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>

        }



                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
    </body>