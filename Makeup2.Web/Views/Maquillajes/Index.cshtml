@model IEnumerable<Makeup2.Web.Models.Maquillaje>

@{
    ViewBag.Title = "Index";
}
<body class="maqui">
<p class="mt-3 pt-lg-5">
<p class="mt-3 pt-lg-5">
    <a href="#" data-toggle="modal" data-target="#AddModal" class="btn btn-sm bg-principal text-white"><i class="fas fa-plus"></i> Maquillaje</a>
</p>

<div class="row justify-content ">
    <div class="col-md-6 ">
        <div class="card">
            <div class="card-header bg-principal">
                <h6 class="text-white ">Maquillaje mas destacado</h6>
            </div>
            <div class="card-body marc">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Gama.Tipo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Marca)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gama.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "MAquillajes", new { id = item.Id })" title="Editar" class="btn btn-sm bg-principal rounded"><i class="far fa-edit text-white"></i></a>
                                <a href="@Url.Action("Delete", "MAquillajes", new { id = item.Id })" title="Eliminar" class="btn btn-sm bg-principal rounded"><i class="fas fa-trash text-white"></i> </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-principal">
                <h5 class="modal-title text-white" id="exampleModalLabel">Agregar nueva marca</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Create","MAquillajes")" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        
                        <div class="col-md-10">
                            <label class="col-md-6 col-form-label">
                                Fecha que caduca
                            </label>
                            <input type="text" value="" name="DateTime" class="form-control" />

                        </div>
                        <div class="col-md-10">
                            <label class="col-md-6 col-form-label">
                                Gama
                            </label>
                            <input type="text" value="" name="Marca" class="form-control" />

                        </div>
                        <div class="col-md-10">
                            <label class="col-md-6 col-form-label">
                                Marca
                            </label>
                            <input type="text" value="" name="GamaId" class="form-control" />

                        </div>
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary btn-sm">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
    </body>