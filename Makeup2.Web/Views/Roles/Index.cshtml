@model IEnumerable<Makeup2.Web.Models.ApplicationUser>
@{
    ViewBag.Title = "Roles";
}
<p class="mt-3 pt-lg-5">
<p class="mt-3 pt-lg-5">
    <div class="container">
        <div class="row justify-content">
            <div class="col-md-10">
                <div class="card ">
                    <div class="card-header bg-principal">
                        <h4 class="text-white">Lista de usuarios</h4>
                    </div>
                    <div class="card-body marc">
                        <table class="table table-hover table-sm">
                            <tr>
                                <td>Item</td>
                                <td>UserName</td>
                                <td>Email</td>
                                <td>Add rol</td>
                            </tr>
                            @{ 
                                int count = 1;
                            }
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>@count</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td><a href="@Url.Action("AddRoles","Roles", new { id=item.Id})">Add</a></td>
                        </tr>
                                count++;
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>






